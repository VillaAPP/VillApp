<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_mapa_villa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studio.waterwell.villaapp.Fragmentos.FragMapa2">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frag_mapa"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

        </FrameLayout>

        <Button
            android:id="@+id/btn_tmapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar mapa"
            android:layout_above="@+id/frag_mapa"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reubicar"
            android:layout_marginEnd="21dp"
            android:layout_above="@+id/frag_mapa"
            android:layout_toStartOf="@+id/btn_prueba" />

        <Button
            android:id="@+id/btn_prueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prueba"
            android:layout_above="@+id/frag_mapa"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp" />

    </RelativeLayout>
</FrameLayout>
