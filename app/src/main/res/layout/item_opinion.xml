<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_opinion_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/item_opinion_opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_opinion_nombre"
        android:layout_below="@+id/item_opinion_nombre"
        android:layout_marginTop="11dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/item_opnion_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="TextView"
        android:layout_alignBaseline="@+id/item_opinion_nombre"
        android:layout_alignBottom="@+id/item_opinion_nombre"
        android:layout_alignParentEnd="true" />
</RelativeLayout>