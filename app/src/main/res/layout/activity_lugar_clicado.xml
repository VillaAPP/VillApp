<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studio.waterwell.villaapp.Actividades.LugarClicado">

    <TextView
        android:id="@+id/lugar_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/lugar_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lugar_nombre"
        android:layout_below="@+id/lugar_nombre"
        android:layout_marginTop="19dp"
        android:text="TextView" />

    <RelativeLayout
        android:id="@+id/layout_descripcion"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/lugar_direccion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp">

        <TextView
            android:id="@+id/lugar_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </RelativeLayout>

    <Button
        android:id="@+id/lugar_atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="@string/lugar_atras"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/lugar_ruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lugar_atras"
        android:layout_toStartOf="@+id/lugar_atras"
        android:text="@string/lugar_ruta" />

    <Button
        android:id="@+id/lugar_opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lugar_ruta"
        android:layout_toStartOf="@+id/lugar_ruta"
        android:text="@string/lugar_opinion" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/layout_descripcion"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:id="@+id/layout_lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <ListView
                android:id="@+id/lista_opiniones"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_carga"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/carga_opiniones"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
